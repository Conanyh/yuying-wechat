/* pages/detail/detail.wxss */
page{
  background-color: #f5f5f5;
}

.title {
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin: 60rpx 5% 40rpx 5%;
}

.title image{
  width: 72rpx;
  height: 24rpx;
}

.box {
  margin: 0 5% 5% 5%;
  background-color: #f5f5f5;
  z-index: 999;
}

.box .user{
  font-size: 26rpx;
  color: #28282C;
  line-height: 54rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 3% 5%;
}

.box .user .user-content {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;

}

.box .user .user-left{
  display: flex;
  width: 50%;
}

.box .user .user-right{
  display: flex;
  width: 50%;
}

.box .user .user-icon{
  display: row;
  justify-content: center;
}

.box .user .user-icon text{
  color: #999;
  padding-right: 20rpx;
}

.box .tip{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #28282C;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-left: -10rpx;
}

.box .tip image{
  width: 40rpx;
  height: 40rpx;
}

.box .tip .score{
  padding-left: 20rpx;
  opacity: .3;
}

.box .content{
  min-height: 200rpx;
  background-color: #fff;
}

.content .single .time{
  font-size: 28rpx;
  color: #28282C;
  line-height: 54rpx;
}

.content .single {
  padding: 3%;
}

.content .single-line {
  border: 1rpx solid rgba(225, 225, 225, 0.1);
  margin: 0 3%;
}

.content .single .time .time-content {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 28rpx;
  justify-content: left;
  align-items: center;
}

.content .single .time .time-left{
  width: 50%;
  display: flex;
  justify-content: left;
  align-items: center;
}

.content .single .time .time-right{
  display: flex;
  width: 50%;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.content .single .time .time-icon{
  display: flex;
  justify-content: center;
}

.time-icon .time-icon-font{
  font-size: 28rpx;
  color: #999;
}

.time-icon .time-icon-score{
  font-size: 28rpx;
  color: #28282C;
}

.content .single .time .time-icon image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.time .time-left-tip {
  font-size: 30rpx;
  font-weight: bold;
  color: #28282C;
}

.time .time-left-score {
  font-size: 24rpx;
  margin-left: 10rpx;
  opacity: .3;
} 

/*加号和减号*/  
.time-zone text {  
  width: 48rpx;
  line-height: 48rpx;
  text-align: center;  
  float: left;  
}  

/*数值*/  
.time-zone input {  
  width: 60rpx;
  float: left;  
  margin: 0 auto;  
  text-align: center;  
  font-size: 28rpx;
}  

/*普通样式*/  
.time-zone .normal{
  color: #3B7EE5;
  background-color: #E7EFFC;
}  

/*禁用样式*/  
.time-zone .disabled{
  color: #999;
  background-color: #E9E9E9;
}

.textarea {
  background-color: #fff;
  padding: 5%;
  min-height: 150rpx;
}

.textarea textarea{
  width: 100%;
  height: 200rpx;
  color: #666666;
}

.textaea-placeholder {
  color: #999999;
  font-size: 28rpx;
}

.bottom {
  padding-top: 70rpx;
  height: 120rpx;
  overflow-y: hidden;
}

.bottom .save-btn {
  margin-right: 30rpx;
  margin-left: 30rpx;
  width: 90%;
  height: 90rpx;
  background-color: #3B7EE5;
  border-radius: 10rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}