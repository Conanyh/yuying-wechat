/* pages/info/info.wxss */

.main {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.main .top-title {
  margin-top: 40rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.form-item {
  height: 120rpx;
  border-bottom: 1rpx solid rgba(225, 225, 225, 0.5);
  display: flex;
  align-items: center;
}

.form-item .left {
  width: 200rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.form-item .right-input {
  width: 490rpx;
  font-size: 26rpx;
  line-height: 120rpx;
  font-weight: normal;
  color: #28282C;
  text-align: right;
  padding-right: 10rpx;
}

.input-placeholder{
  color: #999;
  font-size: 26rpx;
  font-weight: normal;
}

.sex-box {
  width: 480rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.sex-box .radio-item:nth-child(2) {
  margin-left: 80rpx;
}

.select-box {
  display: flex;
}

.more {
  width: 30rpx;
  height: 15rpx;
}

.delete {
  width: 30rpx;
  height: 30rpx;
}

.form-item:last-child {
  border-bottom: 0rpx solid rgba(2225, 225, 225, 0.5);
}

.bottom {
  padding-top: 70rpx;
  height: 190rpx;
  overflow-y: hidden;
}

.bottom .save-btn {
  margin-right: 30rpx;
  margin-left: 30rpx;
  width: 90%;
  height: 90rpx;
  background-color: #3B7EE5;
  border-radius: 10rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}