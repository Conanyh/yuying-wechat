/* pages/staff/staff.wxss */
page {
  background: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
  overflow-x: hidden;
}

.table {
  border: 1rpx solid #D1E4FF;
  margin: 5% 5% 0 5%;
  border-radius: 10rpx;
  min-height: 1000rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.tr:nth-child(1) {
  height: 60rpx;
}

.tr:nth-last-child(1) {
  margin-bottom: 40rpx;
}

.tr-line {
  border: 1rpx solid rgba(225, 225, 225, 0.1);
  border-radius: 10rpx;
  margin: 0 30rpx;
}


.td {
  width: 33%;
  justify-content: center;
  text-align: center;
}

.bg-g {
  background: #e6f3f9;
}

.th {
  width: 33%;
  justify-content: center;
  background: #EBF2FC;
  color: #3B7EE5;
  display: flex;
  height: 60rpx;
  align-items: center;
}

.th-line {
  width: 1rpx;
  height: 60rpx;
  background-color: #EBF2FC;
  color: rgba(59, 126, 229, 0.2);
  font-size: 25rpx;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
