<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<view class="scroll-view-item" style='padding-top: {{height}}px; text-align:center; font-weight:bold; color: #fff; margin:0 2%'>考核详情
	<view style="float: left;" bindtap="goback">
		<image src="/images/left-w.png" style="height:44rpx; width: 38rpx"></image>
	</view>
</view>

<view class="title">
	<text>2021年3月全员业绩表现考核</text>
	<view>
		<image src="/images/yiwancheng@2x.png"></image>
	</view>
</view>

<view class="box">
	<view class="user">
		<view class="user-content">
			<view class="user-left">
				<view class="user-icon">
					<text>姓名</text>
				</view>
				<text>陈笑</text>
			</view>
			<view class="user-right">
				<view class="user-icon">
					<text>部门</text>
				</view>
				<text>技术部</text>
			</view>
		</view>
		<view class="user-content">
			<view class="user-left">
				<view class="user-icon">
					<text>日期</text>
				</view>
				<text>2021年3月28日</text>
			</view>
			<view class="user-right">
				<view class="user-icon">
					<text>点评人</text>
				</view>
				<text>朱经理</text>
			</view>
		</view>
		<view class="user-content">
			<view class="user-left">
				<view class="user-icon">
					<text>职位</text>
				</view>
				<text>产品经理</text>
			</view>
		</view>
	</view>

	<view class="tip">
		<image src="/images/line@2x.png"></image>
		<text class="font">工作态度与写作精神 </text>
		<text class="score"> (20分)</text>
	</view>

	<view class="content">
		<block wx:for="{{info.item_one}}" wx:key="index">
			<view class="single">
				<view class="time">
					<view class="time-content">
						<view class="time-left">
							<view class="time-icon">
								<image src="/images/dot.png"></image>
							</view>
							<text class="time-left-tip">{{item.title}}</text><text class="time-left-score">({{item.score}}分)</text>
						</view>
					</view>
					<view class="time-content">
						<view class="time-left">
							<view class="time-icon">
								<text class="time-icon-font">自评：</text>
							</view>
							<text class="time-icon-score">{{item.self_score}}分</text>
						</view>
						<view class="time-right">
							<view class="time-icon">
								<text class="time-icon-font">领导评：</text>
							</view>
							<text class="time-icon-score">{{item.leader_score}}分</text>
						</view>
					</view>
				</view>
			</view>
			<view class="single-line"></view>
		</block>
	</view>

	<view class="tip">
		<image src="/images/line@2x.png"></image>
		<text class="font">工作能力与业绩 </text>
		<text class="score"> (80分)</text>
	</view>

	<view class="content">
		<block wx:for="{{info.item_two}}" wx:key="index">
			<view class="single">
				<view class="time">
					<view class="time-content">
						<view class="time-left">
							<view class="time-icon">
								<image src="/images/dot.png"></image>
							</view>
							<text class="time-left-tip">{{item.title}}</text><text class="time-left-score">({{item.score}}分)</text>
						</view>
					</view>
					<view class="time-content">
						<view class="time-left">
							<view class="time-icon">
								<text class="time-icon-font">自评：</text>
							</view>
							<text class="time-icon-score">{{item.self_score}}分</text>
						</view>
						<view class="time-right">
							<view class="time-icon">
								<text class="time-icon-font">领导评：</text>
							</view>
							<text class="time-icon-score">{{item.leader_score}}分</text>
						</view>
					</view>
				</view>
			</view>
			<view class="single-line"></view>
		</block>
	</view>

	<view class="tip">
		<image src="/images/line@2x.png"></image>
		<text class="font">领导评语 </text>
	</view>
	<view class="textarea">
		<textarea auto-height>{{info.comment}}</textarea>
	</view>

</view>