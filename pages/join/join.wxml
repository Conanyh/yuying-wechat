<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<view class="scroll-view-item" style='padding-top: {{height}}px; text-align:center; font-weight:bold; color: #fff; margin:0 2%'>立即参与
	<view style="float: left;" bindtap="goback">
		<image src="/images/left-w.png" style="height:44rpx; width: 38rpx"></image>
	</view>
</view>

<form bindsubmit="formSubmit">
	<view class="title">
		<text>2021年3月全员业绩表现考核</text>
	</view>

	<view class="box">
		<view class="user">
			<view class="user-content">
				<view class="user-left">
					<view class="user-icon">
						<text>姓名</text>
					</view>
					<text>陈笑</text>
				</view>
				<view class="user-right">
					<view class="user-icon">
						<text>部门</text>
					</view>
					<text>技术部</text>
				</view>
			</view>
			<view class="user-content">
				<view class="user-left">
					<view class="user-icon">
						<text>日期</text>
					</view>
					<text>2021年3月28日</text>
				</view>
				<view class="user-right">
					<view class="user-icon">
						<text>职位</text>
					</view>
					<text>产品经理</text>
				</view>
			</view>
		</view>

		<view class="tip">
			<image src="/images/line@2x.png"></image>
			<text class="font">工作态度与写作精神 </text>
			<text class="score"> (20分)</text>
		</view>

		<view class="content">
			<block wx:for="{{list.item_one}}" wx:key="key">
				<view class="single">
					<view class="time">
						<view class="time-content">
							<view class="time-left">
								<view class="time-icon">
									<image src="/images/dot.png"></image>
								</view>
								<text class="time-left-tip">{{item.title}}</text><text class="time-left-score">({{item.score}}分)</text>
							</view>
						</view>
						<view class="time-content">
							<view class="time-left">
								<view class="time-icon">
									<text class="time-icon-font">自评：</text>
								</view>
								<view class="time-zone">
									<text class="{{item.minusStatus}}" data-index="{{index}}" bindtap='sub'>-</text>
									<input type="number" data-index="{{index}}" name="{{item.name}}" bindchange="bindManual" disabled="true" value="{{item.num}}" />
									<text class="normal" data-index="{{index}}" bindtap='add'>+</text>
								</view>
							</view>
							<view class="time-right">
								<view class="time-icon">
									<text class="time-icon-font">领导评：</text>
								</view>
								<view class="time-zone">
									<text class="disabled">-</text>
									<input type="number" disabled="true" value="1" />
									<text class="disabled">+</text>
								</view>
							</view>
						</view>
					</view>
				</view>
			</block>
		</view>

		<view class="tip">
			<image src="/images/line@2x.png"></image>
			<text class="font">工作能力与业绩 </text>
			<text class="score"> (80分)</text>
		</view>

		<view class="content">
			<block wx:for="{{list.item_two}}" wx:key="key">
				<view class="single">
					<view class="time">
						<view class="time-content">
							<view class="time-left">
								<view class="time-icon">
									<image src="/images/dot.png"></image>
								</view>
								<text class="time-left-tip">{{item.title}}</text><text class="time-left-score">({{item.score}}分)</text>
							</view>
						</view>
						<view class="time-content">
							<view class="time-left">
								<view class="time-icon">
									<text class="time-icon-font">自评：</text>
								</view>
								<view class="time-zone">
									<text class="{{item.minusStatus}}" data-index="{{index}}" bindtap='sub2'>-</text>
									<input type="number" data-index="{{index}}" name="{{item.name}}" bindchange="bindManual" disabled="true" value="{{item.num}}" />
									<text class="normal" data-index="{{index}}" bindtap='add2'>+</text>
								</view>
							</view>
							<view class="time-right">
								<view class="time-icon">
									<text class="time-icon-font">领导评：</text>
								</view>
								<view class="time-zone">
									<text class="disabled">-</text>
									<input type="number" disabled="true" value="1" />
									<text class="disabled">+</text>
								</view>
							</view>
						</view>
					</view>
				</view>
			</block>
		</view>

		<view class="bottom">
			<button class="save-btn" form-type="submit">提交考核</button>
		</view>

	</view>
</form>